<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager - Home</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .task-card {
            border-left: 4px solid #007bff;
            transition: transform 0.2s;
            margin-bottom: 15px;
        }
        .task-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .status-pending { border-left-color: #ffc107; }
        .status-in-progress { border-left-color: #17a2b8; }
        .status-completed { border-left-color: #28a745; }
        
        .priority-high { background-color: #fff5f5; }
        .priority-medium { background-color: #fffbf0; }
        .priority-low { background-color: #f0fff4; }
        
        .badge-priority {
            font-size: 0.7rem;
        }
        
        .task-actions {
            display: flex;
            gap: 5px;
        }
        
        .filter-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-tasks"></i> Task Manager
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-home"></i> Home
                </a>
                <a class="nav-link" href="/add-task">
                    <i class="fas fa-plus"></i> Add Task
                </a>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="fas fa-list-check"></i> Task Dashboard
                </h1>

                <!-- Filters -->
                <div class="filter-section">
                    <h5><i class="fas fa-filter"></i> Filters</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="userFilter" class="form-label">Filter by User:</label>
                            <select id="userFilter" class="form-select" onchange="filterByUser()">
                                <option value="">All Users</option>
                                <% users.forEach(user => { %>
                                    <option value="<%= user.id %>" <%= selectedUser == user.id ? 'selected' : '' %>>
                                        <%= user.username %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="statusFilter" class="form-label">Filter by Status:</label>
                            <select id="statusFilter" class="form-select" onchange="filterByStatus()">
                                <option value="">All Status</option>
                                <option value="pending" <%= selectedStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="in-progress" <%= selectedStatus === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                                <option value="completed" <%= selectedStatus === 'completed' ? 'selected' : '' %>>Completed</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Task Stats -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-bg-warning">
                            <div class="card-body">
                                <h5><i class="fas fa-clock"></i> Pending</h5>
                                <h2><%= tasks.filter(task => task.status === 'pending').length %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-bg-info">
                            <div class="card-body">
                                <h5><i class="fas fa-play"></i> In Progress</h5>
                                <h2><%= tasks.filter(task => task.status === 'in-progress').length %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-bg-success">
                            <div class="card-body">
                                <h5><i class="fas fa-check"></i> Completed</h5>
                                <h2><%= tasks.filter(task => task.status === 'completed').length %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-bg-primary">
                            <div class="card-body">
                                <h5><i class="fas fa-tasks"></i> Total</h5>
                                <h2><%= tasks.length %></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Add Task Button -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>Tasks</h3>
                    <a href="/add-task" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Task
                    </a>
                </div>

                <!-- Tasks List -->
                <% if (tasks.length === 0) { %>
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle"></i>
                        No tasks found. <a href="/add-task">Create your first task!</a>
                    </div>
                <% } else { %>
                    <div class="row">
                        <% tasks.forEach(task => { %>
                            <div class="col-md-6 col-lg-4">
                                <div class="card task-card status-<%= task.status %> priority-<%= task.priority %>">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0"><%= task.title %></h6>
                                            <span class="badge bg-<%= task.priority === 'high' ? 'danger' : task.priority === 'medium' ? 'warning' : 'success' %> badge-priority">
                                                <%= task.priority.toUpperCase() %>
                                            </span>
                                        </div>
                                        
                                        <% if (task.description) { %>
                                            <p class="card-text text-muted small">
                                                <%= task.description.length > 100 ? task.description.substring(0, 100) + '...' : task.description %>
                                            </p>
                                        <% } %>
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="fas fa-user"></i> <%= task.username || 'Unknown' %>
                                            </small>
                                            <span class="badge bg-<%= task.status === 'completed' ? 'success' : task.status === 'in-progress' ? 'info' : 'warning' %>">
                                                <%= task.status.replace('-', ' ').toUpperCase() %>
                                            </span>
                                        </div>
                                        
                                        <small class="text-muted d-block mt-2">
                                            <i class="fas fa-calendar"></i> 
                                            <%= new Date(task.created_at).toLocaleDateString() %>
                                        </small>
                                        
                                        <div class="task-actions mt-3">
                                            <a href="/edit-task/<%= task.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form method="POST" action="/delete-task/<%= task.id %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this task?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer class="text-center text-muted mt-5 py-4" style="background-color: #f8f9fa; border-top: 1px solid #dee2e6;">
        <div class="container">
            <p>&copy; 2024 Task Manager. Built with Python Flask + Node.js + SQLite</p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterByUser() {
            const userSelect = document.getElementById('userFilter');
            const statusSelect = document.getElementById('statusFilter');
            const userId = userSelect.value;
            const status = statusSelect.value;
            
            if (userId) {
                let url = `/user/${userId}`;
                if (status) {
                    url += `?status=${status}`;
                }
                window.location.href = url;
            } else {
                window.location.href = '/';
            }
        }

        function filterByStatus() {
            const userSelect = document.getElementById('userFilter');
            const statusSelect = document.getElementById('statusFilter');
            const userId = userSelect.value;
            const status = statusSelect.value;
            
            if (userId) {
                let url = `/user/${userId}`;
                if (status) {
                    url += `?status=${status}`;
                }
                window.location.href = url;
            } else {
                window.location.href = '/';
            }
        }
    </script>
</body>
</html>